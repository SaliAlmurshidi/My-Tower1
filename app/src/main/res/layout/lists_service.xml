<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end"
    android:id="@+id/layList"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp">

    <TextView
        style=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serverName"
        android:hint="اسم الخدمة"

        android:textSize="25dp"
        android:textColor="@color/textTitel"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="daly"
            android:id="@+id/serverDaly"
            android:textSize="@dimen/NormalText"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تكرار الخدمة : "
            android:textSize="@dimen/BoldText"
            android:textColor="@color/textView"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="شيكل"
            android:id="@+id/serverCurrency"
            android:textSize="@dimen/NormalText"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="20"
            android:id="@+id/serverValue"
            android:textSize="@dimen/NormalText"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تكلفة :"
            android:textSize="@dimen/BoldText"
            android:textColor="@color/textView"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />


</LinearLayout>
